<form
  action="/menu"
  method="post"
  class="h-screen flex flex-col gap-3 max-w-xs mx-auto justify-center items-center"
>

  <h1 class="text-2xl text-neutral-300 p-4">New Food</h1>

  <input
    name="name"
    type="text"
    placeholder="name"
    class="input input-bordered w-full max-w-xs"
  />
  <input
    name="price"
    type="text"
    placeholder="price"
    class="input input-bordered w-full max-w-xs"
  />
  <input
    name="ingredients"
    type="text"
    placeholder="ingredients"
    class="input input-bordered w-full max-w-xs"
  />
  <input
    name="image"
    type="text"
    placeholder="image"
    class="input input-bordered w-full max-w-xs"
  />

  <button class="btn btn-primary w-full"> Add </button>
