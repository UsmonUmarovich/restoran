<form
    action="/register"
    method="post"
    class="h-screen flex flex-col gap-3 max-w-xs mx-auto justify-center items-center">

    <h1 class="text-2xl text-neutral-300 p-4">Register</h1>

    {{#if error}}
    <div class="alert alert-error">
        <div>
            <span>Username already taken.</span>
        </div>
    </div>
    {{/if}}

    <input name="name" type="text" placeholder="Name" class="input input-bordered w-full max-w-xs" />
    <input name="surname" type="text" placeholder="Surname" class="input input-bordered w-full max-w-xs" />

    <input name="username" type="text" placeholder="Username" class="input input-bordered w-full max-w-xs" />
    <input name="password" type="password" placeholder="Password" class="input input-bordered w-full max-w-xs" />

    <button class="btn btn-primary w-full"> Register </button>
</form>