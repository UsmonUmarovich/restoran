<div class="h-screen flex flex-col justify-center items-center bg-slate-100/70">
    <h1 class="text-2xl text-center my-4">Users</h1>
    <div class="overflow-x-auto">
        <table class="table w-full">
            <thead>
                <tr>
                    <th></th>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Surname</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <th>{{@index}}</th>
                    <td>{{username}}</td>
                    <td>{{name}}</td>
                    <td>{{surname}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>